let mapleader=" "

" Plugins
set exchange
set surround
set commentary
set NERDTree
set argtextobj

set ideajoin

" Enable System Clipboard
set clipboard+=unnamed

" Visual tweaks
set number
set relativenumber
set scrolloff=10

" No Bell Sound
set visualbell
set noerrorbells

" Enhance Search
set incsearch
set hlsearch
set ignorecase
set smartcase

map <leader>/ :nohlsearch<CR>

" Open Tools
map <leader>p <Action>(ActivateProjectToolWindow)
map <leader>t <Action>(ActivateTerminalToolWindow)
map <leader>s <Action>(SearchEverywhere)
map <leader>i <Action>(ShowIntentionActions)
map <leader>r <Action>(RefactoringMenu)
map <leader>g <Action>(Vcs.QuickListPopupAction)

" Window Navigation
map <C-s>h <Action>(SplitHorizontally)
map <C-s>v <Action>(SplitVertically)
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l

" Between errors/warnings
map ]e <Action>(GotoNextError)
map [e <Action>(GotoPreviousError)

" Refactor Code
map <leader>f <Action>(ReformatCode)
map <leader>o <Action>(OptimizeImports)

map <leader>v <Action>(IntroduceVariable)
map <leader>m <Action>(ExtractMethod)
map <leader>a <Action>(Generate)

" Code Traversal
map gd <Action>(GotoDeclaration)
map gi <Action>(GotoImplementation)
map gt <Action>(GotoTest)

map H <Action>(MethodUp)
map L <Action>(MethodDown)

map <leader>b <Action>(Back)
map <leader>n <Action>(Forward)

" Tabs
map <Tab> <Action>(NextTab)
map <S-Tab> <Action>(PreviousTab)

" Regions
map <leader>e <Action>(ExpandRegion)
map <leader>E <Action>(ExpandAllRegions)
map <leader>c <Action>(CollapseRegion)
map <leader>C <Action>(CollapseAllRegions)

" Formatter
map <leader>k O//@formatter:
map <leader>j o//@formatter:

" Save or Save+Exit
map <leader>w :w<CR>
map <leader>q :wq<CR>
